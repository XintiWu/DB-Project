{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/server.ts", "src/api/**/*", "src/services/**/*", "src/database/**/*", "src/utils/**/*"],
  "exclude": ["node_modules", "dist", "src/components", "src/pages", "src/hooks", "src/context"]
}

